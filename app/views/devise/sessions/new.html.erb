<div class="container">
  <div class="left-section">
    <div class="header">
      <h1 class="animation a1">Welcome Back!</h1>
      <h4 class="animation a2">Log in to start your learning journey</h4>
    </div>
    <div class="form">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
<!--           <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %> -->
            <%= f.button :submit, "Log in", class: "button-form animation a6" %>
      <% end %>
    </div>
    <div class="animation a7">
       <%= render "devise/shared/links" %>
    </div>
  </div>
  <div class="right-section-login"></div>
</div>





